      <h2>Trainer:</h2>
      <select name="trainer_id">
        <% for (var i = 0; i < trainer.length; i++) {
           if (trainer[i].id === pok.trainer_id) { %>
            <option value="<%= trainer[i].id %>" selected><%= trainer[i].name %></option>
          <% } else { %>
            <option value="<%= trainer[i].id %>"><%= trainer[i].name %></option>
          <% }
         } %>
      </select>
      <input class="highlightwaves-effect waves-light btn add-pokemon-btn" type="submit" value="UPDATE POKEMON PROPERTIES">
    </form>

